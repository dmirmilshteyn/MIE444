<Window x:Class="Tweak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Tweak"
        mc:Ignorable="d"
        Title="Tweak" Height="450" Width="300">
    <Grid>
        <StackPanel>
            <Button Content="Load Data..." Command="{Binding LoadDataFileCommand}" />
            <Button Content="Save Data..." Command="{Binding SaveDataFileCommand}" />
            <DockPanel LastChildFill="True">
                <Button DockPanel.Dock="Right" Content="..." Width="25" Command="{Binding BrowseOutputDirectoryCommand}" />
                <TextBox DockPanel.Dock="Left" Text="{Binding Project.OutputDirectory}"/>
            </DockPanel>
            <local:ConstantsView DataContext="{Binding Project.Constants}" />
            <Button Content="Generate!" Command="{Binding GenerateCodeCommand}" />
        </StackPanel>
    </Grid>
</Window>
